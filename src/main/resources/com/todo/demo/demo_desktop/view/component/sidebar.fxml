<AnchorPane maxHeight="400.0" maxWidth="200.0" minHeight="400.0" minWidth="200.0" prefHeight="400.0" prefWidth="200.0"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.todo.demo.demo_desktop.controller.SidebarController">
    <children>
        <VBox layoutX="-6.0" maxHeight="400.0" maxWidth="200.0" minHeight="400.0" minWidth="200.0" prefHeight="400.0"
              prefWidth="200.0">

            <ToggleButton fx:id="taskMenuButton" text="Задачи" toggleGroup="$menuGroup"/>
            <ToggleButton fx:id="userMenuButton" text="Профиль" toggleGroup="$menuGroup"/>
            <ToggleButton fx:id="settingsButton" text="Настройки" toggleGroup="$menuGroup"/>
        </VBox>
    </children>
</AnchorPane>
