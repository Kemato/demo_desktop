<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.todo.demo.demo_desktop.controller.MainController">

    <!-- Левая панель: Меню пользователя -->
    <left>
        <VBox prefHeight="157.0" prefWidth="120.0" spacing="10" style="-fx-background-color: #f0f0f0;">
            <Label text="Меню пользователя" />
            <Button text="Профиль" />
            <Button text="Редактировать" />
            <Button text="Удалить аккаунт" />
            <Button text="Выход" />
        </VBox>
    </left>

    <!-- Верхняя панель: Поиск и фильтры -->
    <top>
        <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Поиск задач..." HBox.hgrow="ALWAYS" />
            <ChoiceBox fx:id="statusFilter">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Все" />
                        <String fx:value="Выполнено" />
                        <String fx:value="Ожидает" />
                    </FXCollections>
                </items>
            </ChoiceBox>
            <Button onAction="#onCreateTaskClick" text="Создать задачу" />
        </HBox>
    </top>
   <bottom>
        <StackPane fx:id="contentPane" BorderPane.alignment="CENTER">
            <!-- Сюда будет подставляться либо список задач, либо развёрнутая задача -->
        </StackPane>
   </bottom>
</BorderPane>
